@model LoginUser

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/css/Register.css">
    <link rel="stylesheet" href="~/css/Nav.css">
    <link rel="stylesheet" href="~/css/Admin.css">
</head>

<nav class="navbar playfair navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/home">The Book Club</a>
  <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Home
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" href="/myhome">My Books</a>
          <a class="dropdown-item" href="/likedhome">Liked Books</a>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/addbook">Add Book</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/account">Account</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active disabled" href="#">Admin</a>
        </li>
      <li class="nav-item">
        <a class="nav-link out" href="/logout">Sign Out</a>
      </li>
    </ul>
    <span class="navbar-text">
      Verify your account!
    </span>
  </div>
</nav>

<div class="row playfair">
    <div class="col-md-6">
        <div class="jumbotron">
            <h2 class="hello">Hello Administrator</h2>
            <p class="text-center">For Security puposes please go ahead and confirm your account information to procced</p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="jumbotron">
            <form action="/adminaccess" method="post">
                <div class="form-group">
                    <span class="error1" asp-validation-for="LUser"></span>
                    <input placeholder="User Name" class="thisInput form-control" asp-for="LUser">
                </div>
                <div class="form-group">
                    <span class="error1" asp-validation-for="LPassword"></span>
                    <input placeholder="Password" class="thisInput form-control" asp-for="LPassword">
                </div>
                <div class="text-center">
                    <input type="submit" value="Verify" class="btn btn-outline-info"> 
                </div>
            </form>
        </div>
    </div>
</div>